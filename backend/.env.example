# Application
DEBUG=true
APP_NAME=Pixcore
APP_VERSION=0.1.0

# Database
DATABASE_URL=sqlite:///./pixcore.db

# Storage
STORAGE_ROOT=~/PixcoreStorage
THUMB_SIZE_WIDTH=400
